[ng-click] {
	cursor: pointer !important;
}

md-grid-tile {
	-webkit-filter: grayscale(0.56);
	opacity: 0.65;
	transition: all 0.3s;
	
	&:hover {
		-webkit-filter: grayscale(0);
		opacity: 0.75;
	}

	&.no-bg {
		background-color: rgb(63,81,181);
	}

	md-icon {
		width: 90%;
		height: 90%;
		color: rgba(255,255,255, 0.56) !important;
	}
}